
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-5">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Manage <b>Customers</b></h2>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="/Home/Register" role="button" class="btn btn-success">Add New Customer</a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Username</th>
                        <th>Fullname</th>
                        <th>Birthday</th>
                        <th>Avatar</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    @{var i = 0; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            @{i = i + 1;
                            }
                            <td>@i</td>
                            <td>@item.Username</td>
                            <td>@item.Fullname</td>
                            <td>@item.Birthday</td>
                            <td>
                                <img src="~/Images/@item.Avatar" alt="Img" style="width: 70px; height: 70px; border-radius: 50%; border: 1px solid #333;" />
                            </td>
                            <td>@item.Gender</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>